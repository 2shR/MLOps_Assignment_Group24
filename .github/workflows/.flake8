[flake8]
max-line-length = 88
# E203: Whitespace before ':' (often conflicts with Black formatter)
# W503: Line break before binary operator (often conflicts with Black formatter)
# E501: Line too long (handled by max-line-length)
ignore = E203,W503,E501
exclude = 
    .git,
    __pycache__,
    .venv,
    build,
    dist,
    docs,
    migrations
max-complexity = 10